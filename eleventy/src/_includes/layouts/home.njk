{# 
Home Page Layout

Extends base layout with home-specific sections and components.

Data dependencies:
- home: Home page content and configuration
- company: Company information
- navigation: Navigation structure

Components used:
- hero-section
- service-preview-card
- cta-button
#}

{% extends "layouts/base.njk" %}

{% block bodyClass %}home-page{% endblock %}

{% block content %}
  <!-- Hero Section -->
  {% include "components/hero-section.njk" %}
  
  <!-- Amenities Section -->
  <section class="amenities-section">
    <div class="container">
      <div class="amenities-content">
        <ul class="amenities-list">
          {% for item in home.sections.amenities.items %}
            <li class="amenities-item">{{ item }}</li>
          {% endfor %}
        </ul>
        <div class="amenities-cta">
          <a href="{{ home.sections.amenities.cta.url }}" class="cta-button cta-button--primary">
            <span class="cta-button-text">{{ home.sections.amenities.cta.text }}</span>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Photo Gallery Section -->
  <section class="gallery-section">
    <div class="container">
      <div class="gallery-grid">
        {% for image in home.sections.gallery.images %}
          <div class="gallery-item">
            <img src="{{ image.src }}" alt="{{ image.alt }}" loading="lazy">
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  
  <!-- Partners Section -->
  <section class="partners-section">
    <div class="container">
      <div class="partners-grid">
        {% for logo in home.sections.partners.logos %}
          <div class="partner-item">
            <img src="{{ logo.src }}" alt="{{ logo.alt }}" class="partner-logo">
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}

{% block scripts %}
<!-- Home page specific JavaScript -->
